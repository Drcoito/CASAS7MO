public class ParImpar {
    public static void main(String[] args) {
        int numero = 7; // Aquí puedes cambiar el número a verificar

        if (numero % 2 == 0) {
            System.out.println("El número " + numero + " es par.");
        } else {
            System.out.println("El número " + numero + " es impar.");
        }
    }
}
